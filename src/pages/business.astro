---
import Layout from '../layouts/Layout.astro';
import BusinessForm from '../components/business/BusinessForm';
import { BRANCHES } from '../data/branches';
import { getSEOData } from '../utils/seo-content';
import { generateBreadcrumbSchema } from '../utils/seo-schemas';

const currentLang = (Astro.currentLocale || 'en') as 'en' | 'ar';
const isRTL = currentLang === 'ar';

// Get SEO-optimized content
const seoData = getSEOData('business', currentLang);

// Generate breadcrumb schema
const breadcrumbSchema = generateBreadcrumbSchema([
	{ name: currentLang === 'ar' ? 'الرئيسية' : 'Home', url: 'https://supakoto.com' },
	{ name: currentLang === 'ar' ? 'القطاع التجاري' : 'Business Sector', url: `https://supakoto.com${currentLang === 'ar' ? '/ar' : ''}/business` }
]);

// Content translations
const content = {
	en: {
		hero: {
			title: "Partner with SupaKoto: Premium Automotive Protection Across the Middle East",
			subtitle: "Join the leading automotive protection network and build a profitable business with proven systems, premium products, and comprehensive support.",
			cta1: "Franchise Opportunities",
			cta2: "Contact Partnerships"
		},
		whySupakoto: {
			title: "Why Partner with SupaKoto?",
			subtitle: "Build your success with our proven business model and premium brand",
			cards: [
				{
					title: "Brand Authority",
					description: "Leverage our established reputation as the Middle East's premium automotive protection specialist"
				},
				{
					title: "Market Trust",
					description: "Benefit from our proven track record with thousands of satisfied customers across the region"
				},
				{
					title: "Proven Model",
					description: "Access our tested business systems, operational procedures, and profit-generating strategies"
				},
				{
					title: "Marketing Machine",
					description: "Tap into our comprehensive marketing support, digital presence, and lead generation systems"
				}
			]
		},
		franchise: {
			title: "Franchise Opportunities",
			subtitle: "Your journey to automotive protection excellence",
			steps: [
				{
					title: "Apply",
					description: "Submit your franchise application and business plan for review by our team"
				},
				{
					title: "Approval",
					description: "Complete our qualification process and secure your territory rights"
				},
				{
					title: "Training",
					description: "Receive comprehensive training on products, installation, and business operations"
				},
				{
					title: "Launch",
					description: "Open your SupaKoto franchise with full marketing and operational support"
				}
			]
		},
		success: {
			partners: "Our Trusted Partners"
		}
	},
	ar: {
		hero: {
			title: "انضم إلى سوپاكوتو: حماية السيارات الفاخرة عبر الشرق الأوسط",
			subtitle: "انضم إلى شبكة حماية السيارات الرائدة وابني عملاً مربحاً بأنظمة مجربة ومنتجات فاخرة ودعم شامل.",
			cta1: "فرص الامتياز التجاري",
			cta2: "تواصل للشراكات"
		},
		whySupakoto: {
			title: "لماذا الشراكة مع سوپاكوتو؟",
			subtitle: "ابني نجاحك مع نموذج أعمالنا المجرب وعلامتنا التجارية المتميزة",
			cards: [
				{
					title: "سلطة العلامة التجارية",
					description: "استفد من سمعتنا الراسخة كأخصائي حماية السيارات الفاخرة في الشرق الأوسط"
				},
				{
					title: "ثقة السوق",
					description: "استفد من سجلنا المثبت مع آلاف العملاء الراضين عبر المنطقة"
				},
				{
					title: "نموذج مجرب",
					description: "احصل على أنظمة أعمالنا المختبرة والإجراءات التشغيلية واستراتيجيات توليد الأرباح"
				},
				{
					title: "آلة التسويق",
					description: "استفد من دعمنا التسويقي الشامل وحضورنا الرقمي وأنظمة توليد العملاء المحتملين"
				}
			]
		},
		franchise: {
			title: "فرص الامتياز التجاري",
			subtitle: "رحلتك نحو التميز في حماية السيارات",
			steps: [
				{
					title: "التقديم",
					description: "قدم طلب الامتياز التجاري وخطة العمل للمراجعة من قبل فريقنا"
				},
				{
					title: "الموافقة",
					description: "أكمل عملية التأهيل واحصل على حقوق منطقتك"
				},
				{
					title: "التدريب",
					description: "احصل على تدريب شامل على المنتجات والتركيب والعمليات التجارية"
				},
				{
					title: "الإطلاق",
					description: "افتح امتياز سوپاكوتو الخاص بك مع دعم تسويقي وتشغيلي كامل"
				}
			]
		},
		success: {
			partners: "شركاؤنا الموثوقون"
		}
	}
};

const t = content[currentLang];
---

<Layout 
	title={seoData.title}
	description={seoData.description}
	keywords={seoData.keywords}
	type="website"
	schema={breadcrumbSchema}
>
  <main class="min-h-screen text-white" dir={isRTL ? 'rtl' : 'ltr'}>
    
    <!-- Hero Section -->
    <section class="relative py-24 md:py-32 lg:py-40 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#bf1e2e]/10 via-transparent to-transparent"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 bg-gradient-to-r from-white via-white to-neutral-300 bg-clip-text text-transparent">
            {t.hero.title}
          </h1>
          <p class="text-neutral-400 text-lg md:text-xl max-w-3xl mx-auto leading-relaxed mb-8">
            {t.hero.subtitle}
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button 
              onclick="document.getElementById('franchise-section').scrollIntoView({ behavior: 'smooth' })"
              class="sk-btn bg-[#bf1e2e] hover:bg-[#6a343a] text-white px-8 py-4 text-lg font-semibold"
            >
              {t.hero.cta1}
            </button>
            <button 
              onclick="document.getElementById('business-form').scrollIntoView({ behavior: 'smooth' })"
              class="sk-btn bg-slate-700 hover:bg-slate-600 text-white px-8 py-4 text-lg font-semibold"
            >
              {t.hero.cta2}
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Why SupaKoto Section -->
    <section class="py-20 md:py-24">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{t.whySupakoto.title}</h2>
          <p class="text-neutral-400 text-lg max-w-2xl mx-auto">
            {t.whySupakoto.subtitle}
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {t.whySupakoto.cards.map((card, index) => (
            <div class="sk-card group hover:border-[#bf1e2e]/50 transition-all duration-300">
              <div class="w-12 h-12 bg-[#bf1e2e]/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-[#bf1e2e]/30 transition-colors">
                {index === 0 && <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>}
                {index === 1 && <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>}
                {index === 2 && <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>}
                {index === 3 && <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path></svg>}
              </div>
              <h3 class="text-xl font-semibold text-white mb-3">{card.title}</h3>
              <p class="text-neutral-400 leading-relaxed">{card.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Franchise Opportunities Section -->
    <section id="franchise-section" class="py-20 md:py-24 bg-slate-900/30">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{t.franchise.title}</h2>
          <p class="text-neutral-400 text-lg max-w-2xl mx-auto">
            {t.franchise.subtitle}
          </p>
        </div>
        
        <div class="max-w-4xl mx-auto">
          <div class="relative">
            {/* Timeline line */}
            <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-[#bf1e2e] to-transparent hidden md:block"></div>
            
            <div class="space-y-12">
              {t.franchise.steps.map((step, index) => (
                <div class="relative flex items-start">
                  {/* Step number */}
                  <div class="flex-shrink-0 w-16 h-16 bg-[#bf1e2e] rounded-full flex items-center justify-center text-white font-bold text-lg relative z-10">
                    {index + 1}
                  </div>
                  
                  {/* Content */}
                  <div class="ml-8 flex-1">
                    <div class="sk-card">
                      <h3 class="text-xl font-semibold text-white mb-3">{step.title}</h3>
                      <p class="text-neutral-400 leading-relaxed">{step.description}</p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Partnership Models Section -->
    <section class="py-20 md:py-24">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            {currentLang === 'ar' ? 'نماذج الشراكة' : 'Partnership Models'}
          </h2>
          <p class="text-neutral-400 text-lg max-w-2xl mx-auto">
            {currentLang === 'ar' ? 'اختر نموذج الشراكة الذي يناسب أهدافك التجارية' : 'Choose the partnership model that fits your business goals'}
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="sk-card group hover:border-[#bf1e2e]/50 transition-all duration-300">
            <div class="w-12 h-12 bg-[#bf1e2e]/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-[#bf1e2e]/30 transition-colors">
              <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">
              {currentLang === 'ar' ? 'تعاون الوكالات' : 'Dealership Collaborations'}
            </h3>
            <p class="text-neutral-400 leading-relaxed">
              {currentLang === 'ar' ? 'شراكة مع وكالات السيارات لتقديم خدمات الحماية المتميزة للعملاء الجدد' : 'Partner with automotive dealerships to offer premium protection services to new car buyers'}
            </p>
          </div>
          
          <div class="sk-card group hover:border-[#bf1e2e]/50 transition-all duration-300">
            <div class="w-12 h-12 bg-[#bf1e2e]/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-[#bf1e2e]/30 transition-colors">
              <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">
              {currentLang === 'ar' ? 'الأساطيل المؤسسية' : 'Corporate Fleets'}
            </h3>
            <p class="text-neutral-400 leading-relaxed">
              {currentLang === 'ar' ? 'حلول شاملة لحماية أساطيل الشركات والمؤسسات الكبيرة' : 'Comprehensive protection solutions for corporate and enterprise vehicle fleets'}
            </p>
          </div>
          
          <div class="sk-card group hover:border-[#bf1e2e]/50 transition-all duration-300">
            <div class="w-12 h-12 bg-[#bf1e2e]/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-[#bf1e2e]/30 transition-colors">
              <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">
              {currentLang === 'ar' ? 'حلول العقارات والمباني' : 'Real Estate & Building Solutions'}
            </h3>
            <p class="text-neutral-400 leading-relaxed">
              {currentLang === 'ar' ? 'خدمات عزل الحرارة والأشعة فوق البنفسجية للمباني والمشاريع العقارية' : 'Heat and UV isolation services for buildings and real estate developments'}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Success Stories / Branch Growth Section -->
    <section class="py-20 md:py-24 bg-slate-900/30">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            {currentLang === 'ar' ? 'قصص النجاح ونمو الفروع' : 'Success Stories & Branch Growth'}
          </h2>
          <p class="text-neutral-400 text-lg max-w-2xl mx-auto">
            {currentLang === 'ar' ? 'انضم إلى شبكتنا المتنامية من الفروع الناجحة عبر الشرق الأوسط' : 'Join our growing network of successful branches across the Middle East'}
          </p>
        </div>
        
        <!-- Stats Block -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-[#bf1e2e] mb-2">{BRANCHES.length}+</div>
            <div class="text-white font-semibold mb-1">
              {currentLang === 'ar' ? 'فروع نشطة' : 'Active Branches'}
            </div>
            <div class="text-neutral-400 text-sm">
              {currentLang === 'ar' ? 'عبر الإمارات ومصر' : 'Across UAE & Egypt'}
            </div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-[#bf1e2e] mb-2">15000+</div>
            <div class="text-white font-semibold mb-1">
              {currentLang === 'ar' ? 'سيارة محمية' : 'Cars Protected'}
            </div>
            <div class="text-neutral-400 text-sm">
              {currentLang === 'ar' ? 'عملاء راضون' : 'Satisfied Customers'}
            </div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-[#bf1e2e] mb-2">15+</div>
            <div class="text-white font-semibold mb-1">
              {currentLang === 'ar' ? 'سنوات ضمان' : 'Years Warranty'}
            </div>
            <div class="text-neutral-400 text-sm">
              {currentLang === 'ar' ? 'على منتجاتنا المتميزة' : 'On Premium Products'}
            </div>
          </div>
        </div>
        
        <!-- Partner Logos Strip -->
        <div class="bg-slate-800/50 rounded-2xl p-8">
          <h3 class="text-center text-white font-semibold mb-8">{t.success.partners}</h3>
          
          <!-- Payment Partners -->
          <div class="mb-8">
            <h4 class="text-center text-neutral-300 text-sm font-medium mb-4">Payment Partners</h4>
            <div class="flex flex-wrap justify-center items-center gap-6 mb-6">
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/payment/eg/NBE-logo.svg" alt="NBE" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/payment/eg/bmp-logo.png" alt="Banque Misr" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/payment/eg/valu.webp" alt="valU" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/payment/ae/tabby-logo-1.png" alt="Tabby" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/payment/common/visa.png" alt="Visa" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/payment/common/MasterCard.png" alt="MasterCard" class="max-h-8 max-w-full object-contain" />
              </div>
            </div>
          </div>
          
          <!-- Trusted Partners -->
          <div>
            <h4 class="text-center text-neutral-300 text-sm font-medium mb-4">Trusted Partners</h4>
            <div class="flex flex-wrap justify-center items-center gap-6">
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/partners/mansour-group-logo.svg" alt="Mansour Group" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/partners/mercedes-benz-9.svg" alt="Mercedes-Benz" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/partners/skoda.svg" alt="Škoda" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/partners/citroen.svg" alt="Citroën" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/partners/jetour.svg" alt="Jetour" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/partners/haval-logo.svg" alt="Haval" class="max-h-8 max-w-full object-contain" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Support & Training Section -->
    <section class="py-20 md:py-24">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Image Placeholder -->
          <div class="order-2 lg:order-1">
            <div class="aspect-video bg-gradient-to-br from-slate-800 to-slate-900 rounded-2xl flex items-center justify-center border border-slate-700">
              <div class="text-center">
                <svg class="w-16 h-16 text-[#bf1e2e] mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                <p class="text-slate-400">
                  {currentLang === 'ar' ? 'التدريب والدعم المتخصص' : 'Professional Training & Support'}
                </p>
              </div>
            </div>
          </div>
          
          <!-- Content -->
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
              {currentLang === 'ar' ? 'الدعم والتدريب' : 'Support & Training'}
            </h2>
            <div class="space-y-6 text-neutral-400 leading-relaxed">
