---
import Layout from '../layouts/Layout.astro';
import StaticBranchCards from '../components/contact/StaticBranchCards';
import ContactForm from '../components/ContactForm.astro';
import { BRANCHES } from '../data/branches';
import { getSEOData } from '../utils/seo-content';
import { generateBreadcrumbSchema, generateLocalBusinessSchema } from '../utils/seo-schemas';

// Get query parameters for deep linking
const selectedBranchId = Astro.url.searchParams.get('branch') || 'cairo_5th';
const selectedBranch = BRANCHES.find(b => b.id === selectedBranchId) || BRANCHES[0];

// Get SEO-optimized content
const currentLang = (Astro.currentLocale || 'en') as 'en' | 'ar';
const seoData = getSEOData('contact', currentLang);

// Create English branch data
const englishBranches = BRANCHES.map(branch => ({
  ...branch,
  name: branch.id === 'cairo_5th' ? 'SupaKoto Cairo - New Cairo' :
        branch.id === 'maadi' ? 'SupaKoto Cairo - Maadi' :
        branch.id === 'sheikh_zayed' ? 'SupaKoto Cairo - Sheikh Zayed' :
        branch.id === 'damietta' ? 'SupaKoto Damietta' :
        branch.id === 'dubai' ? 'SupaKoto Dubai - Headquarters' : branch.name,
  address: branch.id === 'cairo_5th' ? 'New Cairo, Fifth Settlement, Cairo Governorate' :
           branch.id === 'maadi' ? 'Maadi, Cairo Governorate' :
           branch.id === 'sheikh_zayed' ? 'Sheikh Zayed City, Giza Governorate' :
           branch.id === 'damietta' ? 'Damietta, Damietta Governorate' :
           branch.id === 'dubai' ? 'Al Quoz 4, Dubai, United Arab Emirates' : branch.address,
  hours: branch.id === 'dubai' ? ['Saturday–Friday: 10AM–8PM', 'Sunday: Closed'] :
         ['Saturday–Friday: 10AM–8PM']
}));

const selectedEnglishBranch = englishBranches.find(b => b.id === selectedBranchId) || englishBranches[0];

// Generate breadcrumb schema
const breadcrumbSchema = generateBreadcrumbSchema([
	{ name: currentLang === 'ar' ? 'الرئيسية' : 'Home', url: 'https://supakoto.com' },
	{ name: currentLang === 'ar' ? 'اتصل بنا' : 'Contact Us', url: `https://supakoto.com${currentLang === 'ar' ? '/ar' : ''}/contact` }
]);

// Generate LocalBusiness schema for the selected branch
const localBusinessSchema = generateLocalBusinessSchema(
	selectedEnglishBranch.name,
	{
		streetAddress: selectedEnglishBranch.address,
		addressLocality: selectedEnglishBranch.id.includes('cairo') ? 'Cairo' : 
						selectedEnglishBranch.id === 'damietta' ? 'Damietta' : 'Dubai',
		addressRegion: selectedEnglishBranch.id.includes('cairo') || selectedEnglishBranch.id === 'damietta' ? 'Egypt' : 'UAE',
		postalCode: selectedEnglishBranch.id === 'dubai' ? '00000' : '11511',
		addressCountry: selectedEnglishBranch.id === 'dubai' ? 'AE' : 'EG'
	},
	currentLang
);
---

<Layout 
	title={seoData.title}
	description={seoData.description}
	keywords={seoData.keywords}
	type="website"
	schema={[breadcrumbSchema, localBusinessSchema]}
>
  <main class="min-h-screen text-white">
    <div class="container mx-auto px-4 pt-24 pb-16 md:pt-32 md:pb-20">
      <!-- Page Title -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 bg-gradient-to-r from-white via-white to-neutral-300 bg-clip-text text-transparent">
          Contact Us & Find a Branch
        </h1>
        <p class="text-neutral-400 text-lg md:text-xl max-w-3xl mx-auto leading-relaxed">
          Choose the nearest branch and get the best automotive protection service
        </p>
      </div>

      <!-- Premium Contact Form Section - Full Width -->
      <div class="mb-20">
        <div class="w-full p-8 bg-slate-900/40 backdrop-blur-sm rounded-2xl border border-slate-700">
          <div class="mb-8 text-center">
            <h2 class="text-3xl font-bold text-white mb-2">
              {currentLang === 'ar' ? 'تواصل معنا' : 'Contact Us'}
            </h2>
            <p class="text-slate-300">
              {currentLang === 'ar' ? 'احصل على استشارة مجانية لخدمات السيارات المتميزة' : 'Get a free consultation for premium automotive services'}
            </p>
          </div>

          <ContactForm selectedBranch={selectedBranch} currentLang={currentLang} />
        </div>
      </div>

      <!-- Branch Locations Section -->
      <div class="mb-20">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Our Locations</h2>
          <p class="text-neutral-400 text-lg max-w-2xl mx-auto">
            Visit any of our branches for professional automotive protection services
          </p>
        </div>
        
        <StaticBranchCards 
          branches={englishBranches} 
          locale="en"
        />
      </div>



      <!-- FAQ Section - Full Width -->
      <div class="bg-gradient-to-br from-slate-800/50 to-slate-900/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8 hover:border-slate-600/50 transition-all duration-300 hover:shadow-xl hover:shadow-slate-500/10">
        <h2 class="text-2xl font-bold text-white mb-8 text-center">Frequently Asked Questions</h2>
        <div class="grid gap-6">
          <details class="group">
            <summary class="cursor-pointer text-white font-semibold py-3 px-4 rounded-xl bg-slate-800/50 hover:bg-slate-700/50 transition-colors duration-200 list-none flex items-center justify-between border border-slate-700/30">
              What is PPF and why do I need it?
              <span class="text-neutral-400 group-open:rotate-180 transition-transform duration-200">▼</span>
            </summary>
            <div class="mt-3 px-4 py-3 text-neutral-300 leading-relaxed text-sm">
              Paint Protection Film (PPF) is a transparent, thermoplastic urethane film that protects your vehicle's paint from scratches, chips, stains, and environmental damage while maintaining the original appearance.
            </div>
          </details>

          <details class="group">
            <summary class="cursor-pointer text-white font-semibold py-3 px-4 rounded-xl bg-slate-800/50 hover:bg-slate-700/50 transition-colors duration-200 list-none flex items-center justify-between border border-slate-700/30">
              How long does installation take?
              <span class="text-neutral-400 group-open:rotate-180 transition-transform duration-200">▼</span>
            </summary>
            <div class="mt-3 px-4 py-3 text-neutral-300 leading-relaxed text-sm">
              Installation time varies depending on the coverage area. Partial coverage typically takes 1-2 days, while full vehicle coverage can take 3-5 days for optimal results.
            </div>
          </details>

          <details class="group">
            <summary class="cursor-pointer text-white font-semibold py-3 px-4 rounded-xl bg-slate-800/50 hover:bg-slate-700/50 transition-colors duration-200 list-none flex items-center justify-between border border-slate-700/30">
              What warranty do you provide?
              <span class="text-neutral-400 group-open:rotate-180 transition-transform duration-200">▼</span>
            </summary>
            <div class="mt-3 px-4 py-3 text-neutral-300 leading-relaxed text-sm">
              We provide comprehensive warranty coverage from 5 up to 15 years depending on the product tier, covering defects, yellowing, cracking, and peeling under normal use conditions.
            </div>
          </details>

          <details class="group">
            <summary class="cursor-pointer text-white font-semibold py-3 px-4 rounded-xl bg-slate-800/50 hover:bg-slate-700/50 transition-colors duration-200 list-none flex items-center justify-between border border-slate-700/30">
              Can PPF be removed safely?
              <span class="text-neutral-400 group-open:rotate-180 transition-transform duration-200">▼</span>
            </summary>
            <div class="mt-3 px-4 py-3 text-neutral-300 leading-relaxed text-sm">
              Yes, our premium PPF can be safely removed by professionals without damaging the original paint, leaving your vehicle in pristine condition.
            </div>
          </details>

          <details class="group">
            <summary class="cursor-pointer text-white font-semibold py-3 px-4 rounded-xl bg-slate-800/50 hover:bg-slate-700/50 transition-colors duration-200 list-none flex items-center justify-between border border-slate-700/30">
              Do you offer mobile services?
              <span class="text-neutral-400 group-open:rotate-180 transition-transform duration-200">▼</span>
            </summary>
            <div class="mt-3 px-4 py-3 text-neutral-300 leading-relaxed text-sm">
              Currently, all installations are performed at our certified facilities to ensure optimal environmental conditions and the highest quality results.
            </div>
          </details>

          <details class="group">
            <summary class="cursor-pointer text-white font-semibold py-3 px-4 rounded-xl bg-slate-800/50 hover:bg-slate-700/50 transition-colors duration-200 list-none flex items-center justify-between border border-slate-700/30">
              What makes SupaKoto different?
              <span class="text-neutral-400 group-open:rotate-180 transition-transform duration-200">▼</span>
            </summary>
            <div class="mt-3 px-4 py-3 text-neutral-300 leading-relaxed text-sm">
              We use premium Takai PPF with superior self-healing properties, backed by extensive warranties and installed by certified professionals with years of experience.
            </div>
          </details>
        </div>
      </div>
    </div>
  </main>


  <!-- Inline Script for Branch Updates -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // English branch data for client-side updates
      const englishBranches = [
        {
          id: 'cairo_5th',
          address: 'New Cairo, Fifth Settlement, Cairo Governorate',
          phones: ['+20 12 24464637', '+20 11 08184162'],
          whatsapp: '201108184162',
          hours: ['Saturday–Thursday: 10AM–8PM', 'Friday: Closed'],
          gmaps: 'https://maps.google.com/maps?q=30.018919121730043,31.432121498113556'
        },
        {
          id: 'maadi',
          address: 'Maadi, Cairo Governorate',
          phones: ['+20 12 34567890'],
          whatsapp: '201234567890',
          hours: ['Saturday–Thursday: 10AM–8PM', 'Friday: Closed'],
          gmaps: 'https://maps.google.com/maps?q=29.95311,31.27136'
        },
        {
          id: 'sheikh_zayed',
          address: 'Sheikh Zayed City, Giza Governorate',
          phones: ['+20 12 98765432'],
          whatsapp: '201298765432',
          hours: ['Saturday–Thursday: 10AM–8PM', 'Friday: Closed'],
          gmaps: 'https://maps.google.com/maps?q=30.07708,30.97372'
        },
        {
          id: 'damietta',
          address: 'Damietta, Damietta Governorate',
          phones: ['+20 12 11223344'],
          whatsapp: '201211223344',
          hours: ['Saturday–Thursday: 10AM–8PM', 'Friday: Closed'],
          gmaps: 'https://maps.google.com/maps?q=31.41648,31.81332'
        },
        {
          id: 'dubai',
          address: 'Al Quoz 4, Dubai, United Arab Emirates',
          phones: ['+971 50 626 5404', '+971 55 205 4478'],
          whatsapp: '971506265404',
          hours: ['Saturday–Thursday: 9AM–7PM', 'Friday: Closed'],
          gmaps: 'https://maps.google.com/maps?q=25.13424,55.23184'
        }
      ];

      // Listen for branch change events
      window.addEventListener('branch:changed', function(event) {
        const selectedBranch = (event as CustomEvent).detail;
        // Find the corresponding English branch data
        const englishBranch = englishBranches.find(b => b.id === selectedBranch.id);
        if (englishBranch) {
          updateBranchInfo(englishBranch);
        }
      });

      function updateBranchInfo(branch: any) {
        // Update address
        const addressEl = document.getElementById('branch-address');
        if (addressEl) addressEl.textContent = branch.address;

        // Update hours
        const hoursEl = document.getElementById('branch-hours');
        if (hoursEl) {
          hoursEl.innerHTML = branch.hours.map((hour: string) => `<p class="text-neutral-300">${hour}</p>`).join('');
        }

        // Update action buttons
        const directionsBtn = document.getElementById('directions-btn') as HTMLAnchorElement;
        if (directionsBtn) directionsBtn.href = branch.gmaps;

        const callBtn = document.getElementById('call-btn') as HTMLAnchorElement;
        if (callBtn) callBtn.href = `tel:${branch.phones[0]}`;

        const whatsappBtn = document.getElementById('whatsapp-btn') as HTMLAnchorElement;
        if (whatsappBtn) whatsappBtn.href = `https://wa.me/${branch.whatsapp}`;
      }
    });
  </script>
</Layout>
