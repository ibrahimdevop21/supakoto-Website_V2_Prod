---
import Layout from '../../layouts/Layout.astro';
import BusinessForm from '../../components/business/BusinessForm';
import { BRANCHES } from '../../data/branches';
import { getSEOData } from '../../utils/seo-content';
import { generateBreadcrumbSchema } from '../../utils/seo-schemas';

const currentLang = 'ar' as const;
const isRTL = true;

// Get SEO-optimized content using existing key, then override for Franchise
const seoData = getSEOData('business', currentLang);

// Generate breadcrumb schema (rename Business -> Franchise "الامتياز التجاري")
const breadcrumbSchema = generateBreadcrumbSchema([
	{ name: 'الرئيسية', url: 'https://supakoto.com/ar' },
	{ name: 'الامتياز التجاري', url: 'https://supakoto.com/ar/business' }
]);

// Updated premium Arabic content for Franchise page
const content = {
	hero: {
		title: "امتياز سوپاكوتو: علامتك لدخول عالم حماية السيارات الفاخرة",
		subtitle: "كن جزءاً من قصة نجاح تمتد عبر الإمارات ومصر، مع نظام امتياز متكامل يجمع بين علامة قوية، منتجات يابانية متميزة، ودعم تشغيلي وتسويقي شامل.",
		cta1: "ابدأ رحلتك في الامتياز",
		cta2: "تواصل معنا الآن"
	},
	whySupakoto: {
		title: "لماذا تختار امتياز سوپاكوتو؟",
		subtitle: "لأننا لا نقدم مجرد خدمة — بل علامة تجارية رائدة تبني الثقة مع كل عميل.",
		cards: [
			{
				title: "قوة العلامة التجارية",
				description: "سوپاكوتو أصبحت مرادفاً لحماية السيارات الفاخرة في الشرق الأوسط، بخبرة تمتد عبر آلاف العملاء."
			},
			{
				title: "خبرة تشغيلية",
				description: "نوفر لك أنظمة تشغيل مجربة تغطي كل التفاصيل — من إدارة الفرع إلى خدمة العملاء."
			},
			{
				title: "آلة تسويق جاهزة",
				description: "استفد من منصاتنا الإعلانية وحملاتنا الرقمية المصممة لتوليد عملاء محتملين بجودة عالية."
			},
			{
				title: "منتجات وضمان عالمي",
				description: "أفلام حماية يابانية مع ضمان حتى 15 سنة — نقطة بيع لا تقبل المنافسة."
			}
		]
	},
	franchise: {
		title: "خطوات الحصول على الامتياز",
		subtitle: "عملية واضحة وسريعة تمنحك بداية قوية في السوق",
		steps: [
			{
				title: "التقديم",
				description: "شاركنا اهتمامك وقدّم خطة عملك، وسيقوم فريقنا المتخصص بمراجعتها."
			},
			{
				title: "الموافقة",
				description: "بعد التأهيل، تحصل على حقوق امتياز منطقتك الحصرية."
			},
			{
				title: "التدريب",
				description: "برنامج تدريبي متكامل يغطي المنتجات، التركيب، والإدارة اليومية للفرع."
			},
			{
				title: "الافتتاح",
				description: "ندعم إطلاق فرعك بحملة تسويقية قوية وضمان جودة التشغيل منذ اليوم الأول."
			}
		]
	},
	partnership: {
		title: "نماذج الشراكة",
		subtitle: "خيارات متعددة تلائم حجم وأهداف استثمارك",
		models: [
			{
				title: "امتياز كامل",
				description: "امتلك وتشغّل فرعاً متكاملاً باسم سوپاكوتو مع جميع أنظمتنا ودعمنا."
			},
			{
				title: "وكالات السيارات",
				description: "تعاون مع وكالات السيارات الفاخرة لتقديم خدمات الحماية مباشرة للعملاء الجدد."
			},
			{
				title: "حلول الأساطيل",
				description: "عقود طويلة الأمد مع شركات كبرى لتوفير الحماية لأساطيلها التجارية."
			}
		]
	},
	success: {
		title: "شبكة نجاحات سوپاكوتو",
		subtitle: "نمو مستمر عبر مصر والإمارات وخطط للتوسع الإقليمي",
		stats: {
			branches: "فروع نشطة",
			branchesDesc: "في القاهرة، دمياط، والـقوز بدبي",
			cars: "سيارة محمية",
			carsDesc: "عملاء يثقون بخدماتنا",
			warranty: "سنوات ضمان",
			warrantyDesc: "على منتجاتنا اليابانية"
		},
		partners: "شركاؤنا في النجاح"
	},
	support: {
		title: "تدريب ودعم على أعلى مستوى",
		content: [
			"نوفر برامج تدريب متكاملة للفرق — تقنية، تسويقية، وإدارية.",
			"دعم تشغيلي وتسويقي مستمر لضمان جودة الخدمة وتعظيم العائد الاستثماري."
		],
		features: [
			"تدريب متكامل",
			"دعم تسويقي رقمي",
			"إدارة عمليات مجربة",
			"مرافقة مستمرة"
		],
		placeholder: "الدعم الشامل لشركاء النجاح"
	},
	form: {
		title: "طلب امتياز / شراكة",
		subtitle: "املأ النموذج وسيتواصل معك فريقنا لتوضيح تفاصيل الامتياز والخطوات القادمة"
	},
	cta: {
		title: "ابدأ رحلتك مع سوپاكوتو اليوم",
		subtitle: "انضم إلى الامتياز الأكثر تميزاً في مجال حماية السيارات الفاخرة، واستفد من علامة تجارية رائدة ونظام تشغيل متكامل.",
		button: "اطلب معلومات الامتياز"
	}
};

// Override SEO with Franchise naming
const franchiseSEO = {
  title: 'امتياز سوپاكوتو | الامتياز التجاري لحماية السيارات الفاخرة',
  description: content.hero.subtitle,
  keywords: 'امتياز سوپاكوتو, الامتياز التجاري, حماية السيارات الفاخرة, الإمارات, مصر, أفلام حماية, PPF, ضمان 15 سنة, Franchise'
};
---

<Layout 
    title={franchiseSEO.title}
    description={franchiseSEO.description}
    keywords={franchiseSEO.keywords}
    type="website"
    schema={breadcrumbSchema}
>
  <main class="min-h-screen text-white" dir="rtl">
    
    <!-- Hero Section -->
    <section class="relative py-24 md:py-32 lg:py-40 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#bf1e2e]/10 via-transparent to-transparent"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 bg-gradient-to-r from-white via-white to-neutral-300 bg-clip-text text-transparent">
            {content.hero.title}
          </h1>
          <p class="text-neutral-400 text-lg md:text-xl max-w-3xl mx-auto leading-relaxed mb-8">
            {content.hero.subtitle}
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button 
              onclick="document.getElementById('franchise-section').scrollIntoView({ behavior: 'smooth' })"
              class="sk-btn bg-[#bf1e2e] hover:bg-[#6a343a] text-white px-8 py-4 text-lg font-semibold"
            >
              {content.hero.cta1}
            </button>
            <button 
              onclick="document.getElementById('business-form').scrollIntoView({ behavior: 'smooth' })"
              class="sk-btn bg-slate-700 hover:bg-slate-600 text-white px-8 py-4 text-lg font-semibold"
            >
              {content.hero.cta2}
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Why SupaKoto Section -->
    <section class="py-20 md:py-24">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{content.whySupakoto.title}</h2>
          <p class="text-neutral-400 text-lg max-w-2xl mx-auto">
            {content.whySupakoto.subtitle}
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {content.whySupakoto.cards.map((card, index) => (
            <div class="sk-card group hover:border-[#bf1e2e]/50 transition-all duration-300">
              <div class="w-12 h-12 bg-[#bf1e2e]/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-[#bf1e2e]/30 transition-colors">
                {index === 0 && <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>}
                {index === 1 && <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>}
                {index === 2 && <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>}
                {index === 3 && <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path></svg>}
              </div>
              <h3 class="text-xl font-semibold text-white mb-3">{card.title}</h3>
              <p class="text-neutral-400 leading-relaxed">{card.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Franchise Opportunities Section -->
    <section id="franchise-section" class="py-20 md:py-24 bg-slate-900/30">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{content.franchise.title}</h2>
          <p class="text-neutral-400 text-lg max-w-2xl mx-auto">
            {content.franchise.subtitle}
          </p>
        </div>
        
        <div class="max-w-4xl mx-auto">
          <div class="relative">
            {/* Timeline line */}
            <div class="absolute right-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-[#bf1e2e] to-transparent hidden md:block"></div>
            
            <div class="space-y-12">
              {content.franchise.steps.map((step, index) => (
                <div class="relative flex items-start flex-row-reverse">
                  {/* Step number */}
                  <div class="flex-shrink-0 w-16 h-16 bg-[#bf1e2e] rounded-full flex items-center justify-center text-white font-bold text-lg relative z-10">
                    {index + 1}
                  </div>
                  
                  {/* Content */}
                  <div class="mr-8 flex-1">
                    <div class="sk-card">
                      <h3 class="text-xl font-semibold text-white mb-3">{step.title}</h3>
                      <p class="text-neutral-400 leading-relaxed">{step.description}</p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Partnership Models Section -->
    <section class="py-20 md:py-24">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{content.partnership.title}</h2>
          <p class="text-neutral-400 text-lg max-w-2xl mx-auto">
            {content.partnership.subtitle}
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {content.partnership.models.map((model, index) => (
            <div class="sk-card group hover:border-[#bf1e2e]/50 transition-all duration-300">
              <div class="w-12 h-12 bg-[#bf1e2e]/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-[#bf1e2e]/30 transition-colors">
                {index === 0 && <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>}
                {index === 1 && <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>}
                {index === 2 && <svg class="w-6 h-6 text-[#bf1e2e]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>}
              </div>
              <h3 class="text-xl font-semibold text-white mb-3">{model.title}</h3>
              <p class="text-neutral-400 leading-relaxed">{model.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Success Stories / Branch Growth Section -->
    <section class="py-20 md:py-24 bg-slate-900/30">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{content.success.title}</h2>
          <p class="text-neutral-400 text-lg max-w-2xl mx-auto">
            {content.success.subtitle}
          </p>
        </div>
        
        <!-- Stats Block -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-[#bf1e2e] mb-2">{BRANCHES.length}+</div>
            <div class="text-white font-semibold mb-1">{content.success.stats.branches}</div>
            <div class="text-neutral-400 text-sm">{content.success.stats.branchesDesc}</div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-[#bf1e2e] mb-2">15000+</div>
            <div class="text-white font-semibold mb-1">{content.success.stats.cars}</div>
            <div class="text-neutral-400 text-sm">{content.success.stats.carsDesc}</div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-[#bf1e2e] mb-2">15+</div>
            <div class="text-white font-semibold mb-1">{content.success.stats.warranty}</div>
            <div class="text-neutral-400 text-sm">{content.success.stats.warrantyDesc}</div>
          </div>
        </div>
        
        <!-- Partner Logos Strip -->
        <div class="bg-slate-800/50 rounded-2xl p-8">
          <h3 class="text-center text-white font-semibold mb-8">{content.success.partners}</h3>
          
          <!-- Payment Partners -->
          <div class="mb-8">
            <h4 class="text-center text-neutral-300 text-sm font-medium mb-4">شركاء الدفع</h4>
            <div class="flex flex-wrap justify-center items-center gap-6 mb-6">
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/payment/eg/NBE-logo.svg" alt="البنك الأهلي المصري" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/payment/eg/bmp-logo.png" alt="بنك مصر" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/payment/eg/valu.webp" alt="فاليو" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/payment/ae/tabby-logo-1.png" alt="تابي" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/payment/common/visa.png" alt="فيزا" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/payment/common/MasterCard.png" alt="ماستركارد" class="max-h-8 max-w-full object-contain" />
              </div>
            </div>
          </div>
          
          <!-- Trusted Partners -->
          <div>
            <h4 class="text-center text-neutral-300 text-sm font-medium mb-4">الشركاء الموثوقون</h4>
            <div class="flex flex-wrap justify-center items-center gap-6">
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/partners/mansour-group-logo.svg" alt="مجموعة منصور" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/partners/mercedes-benz-9.svg" alt="مرسيدس-بنز" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/partners/skoda.svg" alt="سكودا" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/partners/citroen.svg" alt="ستروين" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/partners/jetour.svg" alt="جيتور" class="max-h-8 max-w-full object-contain" />
              </div>
              <div class="bg-white/10 rounded-lg p-3 h-16 w-20 flex items-center justify-center hover:bg-white/20 transition-colors">
                <img src="/partners/haval-logo.svg" alt="هافال" class="max-h-8 max-w-full object-contain" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Support & Training Section -->
    <section class="py-20 md:py-24">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Image Placeholder -->
          <div class="order-1 lg:order-2">
            <div class="aspect-video bg-gradient-to-br from-slate-800 to-slate-900 rounded-2xl flex items-center justify-center border border-slate-700">
              <div class="text-center">
                <svg class="w-16 h-16 text-[#bf1e2e] mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                <p class="text-slate-400">{content.support.placeholder}</p>
              </div>
            </div>
          </div>
          
          <!-- Content -->
          <div class="order-2 lg:order-1">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">{content.support.title}</h2>
            <div class="space-y-6 text-neutral-400 leading-relaxed">
              {content.support.content.map(paragraph => (
                <p>{paragraph}</p>
              ))}
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-8">
                {content.support.features.map(feature => (
                  <div class="flex items-center gap-3">
                    <svg class="w-5 h-5 text-[#bf1e2e] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-white">{feature}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Business Enquiry Form Section -->
    <section id="business-form" class="py-20 md:py-24 bg-slate-900/30">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{content.form.title}</h2>
            <p class="text-neutral-400 text-lg">{content.form.subtitle}</p>
          </div>
          
          <div class="bg-slate-900/40 backdrop-blur-sm rounded-2xl border border-slate-700 p-8">
            <BusinessForm client:load currentLang={currentLang} />
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA Banner -->
    <section class="py-20 md:py-24">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <div class="bg-gradient-to-r from-[#bf1e2e]/20 via-[#bf1e2e]/10 to-[#bf1e2e]/20 rounded-2xl p-12 border border-[#bf1e2e]/30">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">{content.cta.title}</h2>
            <p class="text-neutral-300 text-lg mb-8 max-w-2xl mx-auto">{content.cta.subtitle}</p>
            <button 
              onclick="document.getElementById('business-form').scrollIntoView({ behavior: 'smooth' })"
              class="sk-btn bg-[#bf1e2e] hover:bg-[#6a343a] text-white px-8 py-4 text-lg font-semibold"
            >
              {content.cta.button}
            </button>
          </div>
        </div>
      </div>
    </section>
    
  </main>
</Layout>
