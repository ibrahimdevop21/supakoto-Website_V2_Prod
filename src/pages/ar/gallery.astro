---
import Layout from '../../layouts/Layout.astro';
import SimpleGallery, { type SimpleGalleryImage } from '../../components/gallery/SimpleGallery';
import { t } from '../../i18n';

const currentLang = 'ar';
const rtl = true;

// Generate gallery images from the 238 webp files in public/gallery
const images: SimpleGalleryImage[] = Array.from({ length: 238 }, (_, i) => {
  const imageNumber = String(i + 1).padStart(3, '0');
  return {
    src: `/gallery/supa-${imageNumber}.webp`,
    alt: `تركيب PPF احترافي من سوباكوتو ${imageNumber}`,
    caption: `تركيب PPF احترافي — مشروع ${imageNumber}`
  };
});

---

<Layout 
  title={t('gallery.title')}
  description={t('gallery.description')}
>
  <section class="py-16 md:py-20 lg:py-24">
    <!-- Gallery Hero Section with proper spacing -->
    <div class="mb-24 md:mb-32">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold bg-gradient-to-r from-red-600 via-red-500 to-orange-500 bg-clip-text text-transparent mb-6 tracking-tight font-arabic">
          {t('gallery.hero.title', {}, Astro)}
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto leading-relaxed font-arabic">
          {t('gallery.hero.subtitle', {}, Astro)}
        </p>
        <div class="w-24 h-1 bg-gradient-to-r from-red-500 to-red-600 mx-auto rounded-full"></div>
      </div>
    </div>
    
    <!-- Gallery Section -->
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <SimpleGallery 
        client:load 
        locale={currentLang as "en" | "ar"} 
        images={images}
        heightClass="h-[56vh] md:h-[68vh]"
        showCounter={true}
        showCaptions={true}
      />
    </div>
  </section>
</Layout>
