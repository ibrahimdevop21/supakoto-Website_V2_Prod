---
import Layout from '../../layouts/Layout.astro';

import OurStory from '../../components/about/OurStory.tsx';
import Timeline from '../../components/about/Timeline.tsx';
import OurPhilosophy from '../../components/about/OurPhilosophy.tsx';
import ServicesCTA from '@services/ServicesCTA';
import { t } from '../../i18n/index.ts';
import { getSEOData } from '../../utils/seo-content';
import { generateBreadcrumbSchema } from '../../utils/seo-schemas';

const lang = Astro.currentLocale || 'ar';
const currentLang = lang as 'en' | 'ar';
const rtl = true;

// Get SEO-optimized content for Arabic about page
const seoData = getSEOData('about', currentLang);

// Generate breadcrumb schema
const breadcrumbSchema = generateBreadcrumbSchema([
	{ name: 'الرئيسية', url: 'https://supakoto.com/ar' },
	{ name: 'من نحن', url: 'https://supakoto.com/ar/about' }
]);
---

<Layout 
	title={seoData.title}
	description={seoData.description}
	keywords={seoData.keywords}
	type="website"
	schema={breadcrumbSchema}
>
  <section class="py-16 md:py-20 lg:py-24">

    
    <!-- Our Story Section -->
    <div class="mb-24 md:mb-32">
      <OurStory client:visible currentLocale={currentLang} isRTL={rtl} />
    </div>
    
    <!-- Timeline Section -->
    <div class="mb-24 md:mb-32">
      <Timeline client:visible currentLocale={currentLang} isRTL={rtl} />
    </div>
    
    <!-- Our Philosophy Section -->
    <div class="mb-24 md:mb-32">
      <OurPhilosophy client:visible currentLocale={currentLang} isRTL={rtl} />
    </div>
    
    <!-- CTA Section -->
    <div>
      <ServicesCTA client:visible currentLocale={currentLang} isRTL={rtl} />
    </div>
  </section>
</Layout>
