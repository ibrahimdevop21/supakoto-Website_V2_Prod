---
/* ============================================
   SUPAKOTO THEME TOGGLE COMPONENT
   ============================================
   
   Minimal UI for theme switching.
   Uses theme-toggle.ts utility for logic.
   
   SAFE IMPLEMENTATION:
   - No existing component modifications
   - Self-contained
   - Can be placed anywhere in layout
   ============================================ */
---

<button
  id="theme-toggle"
  type="button"
  aria-label="Toggle theme"
  class="fixed bottom-6 right-6 z-50 flex items-center justify-center w-12 h-12 rounded-full bg-slate-800/90 dark:bg-slate-800/90 border border-slate-700/60 backdrop-blur-sm shadow-lg hover:bg-slate-700/90 transition-all duration-200 hover:scale-105"
>
  <svg
    id="theme-icon-sun"
    class="w-5 h-5 text-yellow-400 hidden"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    />
  </svg>
  <svg
    id="theme-icon-moon"
    class="w-5 h-5 text-slate-300"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    />
  </svg>
</button>

<script>
  import { toggleTheme, getCurrentTheme } from '../utils/theme-toggle';

  function updateIcon() {
    const current = getCurrentTheme();
    const sunIcon = document.getElementById('theme-icon-sun');
    const moonIcon = document.getElementById('theme-icon-moon');
    
    if (current === 'light') {
      sunIcon?.classList.remove('hidden');
      moonIcon?.classList.add('hidden');
    } else {
      sunIcon?.classList.add('hidden');
      moonIcon?.classList.remove('hidden');
    }
  }

  // Initialize icon state
  updateIcon();

  // Handle toggle click
  const button = document.getElementById('theme-toggle');
  button?.addEventListener('click', () => {
    toggleTheme();
    updateIcon();
  });
</script>
