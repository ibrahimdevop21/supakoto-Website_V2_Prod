---
/* ============================================
   SUPAKOTO WHATSAPP FLOATING BUTTON
   ============================================
   
   Fixed position WhatsApp button.
   Server-rendered with deterministic phone number.
   No client-side routing or dynamic rewriting.
   ============================================ */

import type { CountryCode } from '../data/countryContacts';

export interface Props {
  country: CountryCode;
  wa: string;
}

const { country, wa } = Astro.props;
const currentLang = (Astro.currentLocale || 'en') as 'en' | 'ar';
const whatsappLink = `https://wa.me/${wa}`;
---

<a
  href={whatsappLink}
  target="_blank"
  rel="noopener noreferrer"
  aria-label="Chat on WhatsApp"
  class="whatsapp-float-btn fixed bottom-6 right-6 z-50 flex items-center justify-center w-12 h-12 rounded-full bg-whatsapp hover:bg-[#1da851] text-white transition-all duration-200 hover:scale-105 shadow-lg"
  data-lang={currentLang}
  data-country={country}
  data-phone={wa}
  data-gtm-type="whatsapp"
  data-button-text="Chat on WhatsApp"
>
  <svg class="h-6 w-6" viewBox="0 0 16 16" fill="currentColor">
    <path d="M13.601 2.326A7.85 7.85 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.9 7.9 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.9 7.9 0 0 0 13.6 2.326zM7.994 14.521a6.6 6.6 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.56 6.56 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592m3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.73.73 0 0 0-.529.247c-.182.198-.691.677-.691 1.654s.71 1.916.81 2.049c.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.49-.084-.182-.133-.38-.232" />
  </svg>
</a>

<script>
  import { track } from '@vercel/analytics';

  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.querySelector('.whatsapp-float-btn') as HTMLAnchorElement;
    if (!btn) return;
    
    // Get server-rendered values from data attributes
    const country = btn.getAttribute('data-country') || 'AE';
    const phone = btn.getAttribute('data-phone') || '';
    const lang = btn.getAttribute('data-lang') || 'en';
    
    // Track clicks - NO routing logic, only analytics
    btn.addEventListener('click', () => {
      // Vercel Analytics
      try {
        track('whatsapp_float_click', {
          location: 'floating_button',
          phone_number: phone,
          country,
          lang,
          cta_position: 'float',
          source: 'server_authoritative'
        });
      } catch (error) {
        console.error('Vercel Analytics tracking error:', error);
      }
      
      // GTM dataLayer
      try {
        if (typeof window !== 'undefined') {
          (window as any).dataLayer = (window as any).dataLayer || [];
          (window as any).dataLayer.push({
            event: 'whatsapp_click',
            phone_number: phone,
            button_class: 'whatsapp-float-btn',
            button_text: 'Chat on WhatsApp',
            location: 'floating_button',
            country,
            lang,
            source: 'server_authoritative',
            page_location: location.href
          });
        }
      } catch (error) {
        console.error('GTM tracking error:', error);
      }
    });
  });
</script>
