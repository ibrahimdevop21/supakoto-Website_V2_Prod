---
import ServicedBrandStrip from './ModernTrustedBy';
import { SERVICED_BRANDS } from '../../data/servicedBrands';

// Get current locale and setup i18n
const currentLocale = (Astro.currentLocale || 'en') as 'en' | 'ar';

---

<ServicedBrandStrip 
  locale={currentLocale}
  items={SERVICED_BRANDS}
  client:visible 
/>

<style>
  /* Enhanced hover effects for the scroll container */
  .partners-scroll-container {
    will-change: transform;
  }

  /* Smooth scrolling track */
  .scroll-track {
    will-change: transform;
  }

  /* Smooth continuous horizontal scrolling animations */
  @keyframes scroll-ltr {
    0% {
      transform: translate3d(0, 0, 0);
    }
    100% {
      transform: translate3d(-50%, 0, 0);
    }
  }

  @keyframes scroll-rtl {
    0% {
      transform: translate3d(-50%, 0, 0);
    }
    100% {
      transform: translate3d(0, 0, 0);
    }
  }

  .animate-scroll-ltr {
    animation: scroll-ltr 40s linear infinite;
    will-change: transform;
    backface-visibility: hidden;
    perspective: 1000px;
  }

  .animate-scroll-rtl {
    animation: scroll-rtl 40s linear infinite;
    will-change: transform;
    backface-visibility: hidden;
    perspective: 1000px;
  }

  /* Pause animation on hover */
  .partners-scroll-container:hover .scroll-track {
    animation-play-state: paused;
  }

  /* Mask edges for smooth appearance/disappearance */
  .mask-edges {
    position: relative;
  }

  .mask-edges::before,
  .mask-edges::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 40px;
    z-index: 10;
    pointer-events: none;
  }

  .mask-edges::before {
    left: 0;
    background: linear-gradient(to right, 
      rgb(255 255 255 / 1) 0%, 
      rgb(255 255 255 / 0.8) 30%, 
      rgb(255 255 255 / 0) 100%);
  }

  .mask-edges::after {
    right: 0;
    background: linear-gradient(to left, 
      rgb(255 255 255 / 1) 0%, 
      rgb(255 255 255 / 0.8) 30%, 
      rgb(255 255 255 / 0) 100%);
  }

  /* Dark mode mask edges */
  .dark .mask-edges::before {
    background: linear-gradient(to right, 
      rgb(15 23 42 / 1) 0%, 
      rgb(15 23 42 / 0.8) 30%, 
      rgb(15 23 42 / 0) 100%);
  }

  .dark .mask-edges::after {
    background: linear-gradient(to left, 
      rgb(15 23 42 / 1) 0%, 
      rgb(15 23 42 / 0.8) 30%, 
      rgb(15 23 42 / 0) 100%);
  }

  /* Continuous subtle float animation for logos */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px) scale(1);
    }
    50% {
      transform: translateY(-3px) scale(1.02);
    }
  }

  .animate-float {
    animation: float 4s ease-in-out infinite;
  }

  /* Stagger animation delays for different logos */
  .partner-logo:nth-child(1) .animate-float {
    animation-delay: 0s;
  }
  .partner-logo:nth-child(2) .animate-float {
    animation-delay: 0.5s;
  }
  .partner-logo:nth-child(3) .animate-float {
    animation-delay: 1s;
  }
  .partner-logo:nth-child(4) .animate-float {
    animation-delay: 1.5s;
  }
  .partner-logo:nth-child(5) .animate-float {
    animation-delay: 2s;
  }
  .partner-logo:nth-child(6) .animate-float {
    animation-delay: 2.5s;
  }

  /* Enhanced partner card hover effects */
  .partner-slide:hover {
    transform: translateY(-4px);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .trusted-by-section {
      padding: 3rem 0;
    }
    
    .partner-slide {
      padding: 0 0.5rem;
    }
  }

  /* RTL-specific adjustments */
  [dir="rtl"] .flex-row-reverse {
    flex-direction: row-reverse;
  }

  /* Dark mode enhancements */
  @media (prefers-color-scheme: dark) {
    .partner-slide img {
      filter: brightness(0.9) contrast(1.1);
    }
    
    .partner-slide:hover img {
      filter: brightness(1) contrast(1);
    }
  }
</style>
