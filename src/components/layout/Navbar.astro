---
import NavBar from './NavBar';
import { NAV_ITEMS } from '../../data/navigation';

const pathname = Astro.url.pathname;
const isArabic = pathname.startsWith('/ar/') || pathname === '/ar';
const locale = isArabic ? 'ar' : 'en';
---

<NavBar
  client:visible
  locale={locale}
  navItems={NAV_ITEMS}
  currentPath={pathname}
/>
