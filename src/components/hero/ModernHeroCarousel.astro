---
import { t } from '../../i18n/index';

// Get current locale from Astro context
const currentLang = Astro.currentLocale || 'en';
const rtl = currentLang === 'ar';
---

<section class="hero relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Responsive Video Background -->
  <div class="absolute inset-0 w-full h-full">
    <!-- Mobile Video (≤768px) -->
    <video 
      class="absolute inset-0 w-full h-full object-cover md:hidden"
      autoplay 
      muted 
      loop 
      playsinline
      preload="metadata"
      poster="/gallery/full/supa-066.webp"
    >
      <source src="/videos/supakoto-hero-mobiile.webm" type="video/webm">
      <img 
        src="/gallery/full/supa-066.webp" 
        alt="SupaKoto Paint Protection Film PPF services"
        class="w-full h-full object-cover"
        fetchpriority="high"
      />
    </video>
    
    <!-- Desktop/Tablet Video (≥769px) -->
    <video 
      class="absolute inset-0 w-full h-full object-cover hidden md:block"
      autoplay 
      muted 
      loop 
      playsinline
      preload="metadata"
      poster="/gallery/full/supa-066.webp"
    >
      <source src="/videos/supakoto-hero.webm" type="video/webm">
      <img 
        src="/gallery/full/supa-066.webp" 
        alt="SupaKoto Paint Protection Film PPF services"
        class="w-full h-full object-cover"
        fetchpriority="high"
      />
    </video>
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-transparent"></div>
  </div>

  <!-- Hero Content -->
  <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="max-w-4xl mx-auto">
      <!-- Main Title - Bold & Direct -->
      <h1 class={`text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-brand font-extrabold text-white mb-4 leading-tight ${rtl ? 'font-arabic' : ''}`}>
        <span class="block">
{t('hero.title', {}, Astro)}
        </span>
      </h1>
      
      <!-- Tagline/Highlight -->
      <p class={`text-xl sm:text-2xl md:text-3xl font-brand font-bold text-white mb-6 ${rtl ? 'font-arabic' : ''}`}>
        {t('hero.tagline', {}, Astro)}
      </p>
      
      <!-- Subtitle - Service-Focused & Clear -->
      <p class={`text-base sm:text-lg md:text-xl font-brand text-gray-200 mb-8 max-w-3xl mx-auto leading-relaxed ${rtl ? 'font-arabic' : ''}`}>
        {t('hero.subtitle', {}, Astro)}
      </p>
      
      <!-- Trust Indicators -->
      <div class="flex flex-wrap justify-center items-center gap-4 md:gap-6 mb-8 text-responsive-sm text-gray-300">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-supakoto-red" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="font-brand font-medium">{t('hero.trust.certified', {}, Astro)}</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-supakoto-red" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="font-brand font-medium">{t('hero.trust.experience', {}, Astro)}</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-supakoto-red" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="font-brand font-medium">{t('hero.trust.warranty', {}, Astro)}</span>
        </div>
      </div>
      
      <!-- CTA Buttons - New 3-Button Layout -->
      <div class="flex flex-col items-center gap-4 w-full max-w-2xl mx-auto px-4 sm:px-0">
        
        <!-- Primary CTAs Row (Desktop: side-by-side, Mobile: stacked) -->
        <div class={`flex flex-col md:flex-row gap-3 md:gap-4 w-full ${rtl ? 'md:flex-row-reverse' : ''}`}>
          
          <!-- Red Primary CTA - Protect Your Car Today -->
          <a 
            href={rtl ? '/ar/contact' : '/contact'}
            class={`hero-primary-cta group relative overflow-hidden flex-1 inline-flex items-center justify-center px-6 md:px-8 lg:px-10 py-4 md:py-5 bg-gradient-to-r from-supakoto-red to-supakoto-deep-burgundy hover:from-supakoto-deep-burgundy hover:to-supakoto-red text-white font-brand font-bold text-base md:text-lg rounded-xl md:rounded-2xl transition-all duration-300 transform hover:scale-[1.02] active:scale-[0.98] shadow-xl hover:shadow-2xl focus:outline-none focus:ring-4 focus:ring-supakoto-red/50 ${rtl ? 'flex-row-reverse' : ''}`}
            aria-label={t('hero.cta.primary', {}, Astro)}
            data-lang={currentLang}
          >
            <!-- Shimmer effect -->
            <div class="absolute inset-0 -top-10 -left-10 w-20 h-20 bg-white/20 rounded-full blur-xl opacity-0 group-hover:opacity-100 group-hover:animate-brand-pulse transition-opacity duration-300"></div>
            
            <span class={`relative z-10 font-brand font-bold tracking-wide ${rtl ? 'ml-2' : 'mr-2'}`}>{t('hero.cta.primary', {}, Astro)}</span>
            <svg class={`relative z-10 w-5 h-5 md:w-6 md:h-6 flex-shrink-0 transition-transform duration-300 group-hover:translate-x-1 ${rtl ? 'group-hover:-translate-x-1 rotate-180' : ''}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          
          <!-- WhatsApp CTA - Chat on WhatsApp -->
          <a 
            id="hero-whatsapp-cta"
            href="https://wa.me/971506265404"
            target="_blank"
            rel="noopener noreferrer"
            class={`group relative overflow-hidden flex-1 inline-flex items-center justify-center gap-2 px-6 md:px-8 lg:px-10 py-4 md:py-5 bg-[#25D366] hover:bg-[#1da851] text-white font-brand font-bold text-base md:text-lg rounded-xl md:rounded-2xl transition-all duration-300 transform hover:scale-[1.02] active:scale-[0.98] shadow-xl hover:shadow-2xl focus:outline-none focus:ring-4 focus:ring-[#25D366]/50 ${rtl ? 'flex-row-reverse' : ''}`}
            aria-label={t('hero.cta.whatsapp', {}, Astro)}
          >
            <!-- Shimmer effect -->
            <div class="absolute inset-0 -top-10 -left-10 w-20 h-20 bg-white/20 rounded-full blur-xl opacity-0 group-hover:opacity-100 group-hover:animate-brand-pulse transition-opacity duration-300"></div>
            
            <!-- WhatsApp Icon -->
            <svg class="relative z-10 w-6 h-6 md:w-7 md:h-7 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            
            <span class="relative z-10 font-brand font-bold tracking-wide">{t('hero.cta.whatsapp', {}, Astro)}</span>
          </a>
        </div>
        
        <!-- Secondary CTA - See Our Work (Full Width Below) -->
        <a 
          href={rtl ? '/ar/gallery' : '/gallery'}
          class={`hero-secondary-cta group w-full inline-flex items-center justify-center px-6 md:px-8 lg:px-10 py-4 md:py-5 bg-transparent border-2 border-white/80 hover:border-white text-white hover:bg-white hover:text-supakoto-dark-gray font-brand font-semibold text-base md:text-lg rounded-xl md:rounded-2xl transition-all duration-300 transform hover:scale-[1.02] active:scale-[0.98] backdrop-blur-sm hover:backdrop-blur-none focus:outline-none focus:ring-4 focus:ring-white/30 shadow-lg hover:shadow-xl ${rtl ? 'flex-row-reverse' : ''}`}
          aria-label={t('hero.cta.secondary', {}, Astro)}
          data-lang={currentLang}
        >
          <span class="relative z-10 font-brand font-semibold tracking-wide transition-colors duration-300">{t('hero.cta.secondary', {}, Astro)}</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
  .hero {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  }
  
  /* Ensure video covers properly */
  video {
    will-change: transform;
  }
  
  /* Smooth animations */
  .hero h1 {
    animation: fadeInUp 1s ease-out;
  }
  
  .hero p {
    animation: fadeInUp 1s ease-out 0.2s both;
  }
  
  .hero .flex:has(svg) {
    animation: fadeInUp 1s ease-out 0.4s both;
  }
  
  .hero .flex:has(a) {
    animation: fadeInUp 1s ease-out 0.6s both;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* RTL Support */
  [dir="rtl"] .hero {
    direction: rtl;
  }
  
  /* Font optimization */
  .font-arabic {
    font-family: 'Cairo', 'Noto Sans Arabic', sans-serif;
  }
</style>

<script>
  import { track } from '@vercel/analytics';
  
  // Country detection and WhatsApp number routing
  const COUNTRY_DEFAULTS = {
    AE: { wa: '971506265404' },
    EG: { wa: '201103402446' }
  };

  function countryFromTimezone() {
    try {
      const tz = Intl.DateTimeFormat().resolvedOptions().timeZone;
      // All Africa timezones (including Cairo) go to Egypt
      if (tz && tz.startsWith('Africa/')) {
        return 'EG';
      }
    } catch {}
    return 'AE'; // fallback: Dubai/UAE for rest of world
  }

  document.addEventListener('DOMContentLoaded', () => {
    // Detect country and update WhatsApp button href
    const cc = countryFromTimezone();
    const wa = COUNTRY_DEFAULTS[cc].wa;
    
    // Update WhatsApp CTA href
    const whatsappBtn = document.getElementById('hero-whatsapp-cta') as HTMLAnchorElement | null;
    if (whatsappBtn) {
      whatsappBtn.href = `https://wa.me/${wa}`;
    }

    // Track primary CTA click
    const primaryCTA = document.querySelector('.hero-primary-cta');
    if (primaryCTA) {
      primaryCTA.addEventListener('click', () => {
        try {
          const lang = primaryCTA.getAttribute('data-lang') || 'en';
          track('hero_cta_click', {
            cta_type: 'primary',
            cta_text: 'protect_your_car',
            location: 'hero',
            lang
          });
        } catch (error) {
          console.error('Tracking error:', error);
        }
      });
    }

    // Track WhatsApp CTA click
    if (whatsappBtn) {
      whatsappBtn.addEventListener('click', () => {
        try {
          track('whatsapp_hero_click', {
            location: 'hero',
            phone: wa,
            country: cc,
            cta_position: 'hero'
          });
        } catch (error) {
          console.error('Tracking error:', error);
        }
      });
    }

    // Track secondary CTA click
    const secondaryCTA = document.querySelector('.hero-secondary-cta');
    if (secondaryCTA) {
      secondaryCTA.addEventListener('click', () => {
        try {
          const lang = secondaryCTA.getAttribute('data-lang') || 'en';
          track('secondary_cta_click', {
            cta_type: 'gallery',
            cta_text: 'see_our_work',
            location: 'hero',
            lang
          });
        } catch (error) {
          console.error('Tracking error:', error);
        }
      });
    }
  });
</script>
