# ------- Compression -------
# Use Brotli if available
<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/plain text/html text/xml text/css text/javascript
  AddOutputFilterByType BROTLI_COMPRESS application/xml application/xhtml+xml application/rss+xml application/javascript application/json image/svg+xml
  # Fonts: woff2 is already compressed; skip it
  AddOutputFilterByType BROTLI_COMPRESS font/woff
</IfModule>

# Fallback to Gzip (avoid re-compressing woff2)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css text/javascript
  AddOutputFilterByType DEFLATE application/xml application/xhtml+xml application/rss+xml application/javascript application/json image/svg+xml font/woff
  # DeflateCompressionLevel 7 is usually a good balance
  DeflateCompressionLevel 7
</IfModule>

# ------- Caching -------
<IfModule mod_expires.c>
  ExpiresActive On
  # Hashed static assets (Astro outputs fingerprinted names) — long cache
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  # HTML should be short-lived
  ExpiresByType text/html "access plus 1 hour"
</IfModule>

<IfModule mod_headers.c>
  # Prefer Cache-Control over ETag for static hosting
  Header unset ETag
  FileETag None

  # Long cache for hashed assets
  <FilesMatch "\.(css|js|png|jpe?g|gif|svg|webp|avif|woff|woff2)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Short cache for HTML
  <FilesMatch "\.(html?)$">
    Header set Cache-Control "public, max-age=3600"
  </FilesMatch>

  # ------- Security headers -------
  Header always set X-Content-Type-Options "nosniff"
  # X-Frame-Options can break embeds; use SAMEORIGIN instead of DENY unless you’re sure
  Header always set X-Frame-Options "SAMEORIGIN"
  # X-XSS-Protection is deprecated; safe to omit
  # Strict-Transport-Security only if always HTTPS on this domain (and subdomains). Uncomment when ready:
  # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# ------- Preload -------
# Avoid Link: headers here (paths can be wrong on subroutes). Preload critical assets in your HTML <head>.
# For Google Fonts, prefer <link rel="preconnect"> + <link rel="stylesheet"> with crossorigin in your head, or self-host fonts.
